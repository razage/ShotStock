{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node"],

        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@graphql/*": ["src/graphql/*"],
            "@types/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["scripts"]
}
